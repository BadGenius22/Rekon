# Auto detect text files and perform LF normalization
* text=auto

# Force LF for all text files (prevents CRLF warnings)
# This ensures consistent line endings across all platforms
*.json text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.sh text eol=lf
*.mdc text eol=lf

# Explicitly handle .claude files
.claude/** text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.pdf binary

