{
  "name": "rekon",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:api": "tsup --config tsup.api.config.ts",
    "build:api:vercel": "pnpm build:api && cd apps/api && node scripts/create-vercel-output.mjs",
    "dev:api": "tsup --config tsup.api.config.ts --watch",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "demo:refresh": "pnpm --filter @rekon/api demo:refresh",
    "demo:status": "pnpm --filter @rekon/api demo:status"
  },
  "devDependencies": {
    "@types/node": "^25.0.2",
    "@vitest/coverage-v8": "^4.0.14",
    "tsup": "^8.0.0",
    "turbo": "^2.7.2",
    "typescript": "^5.6.0",
    "vitest": "^4.0.14"
  },
  "packageManager": "pnpm@10.26.2+sha512.0e308ff2005fc7410366f154f625f6631ab2b16b1d2e70238444dd6ae9d630a8482d92a451144debc492416896ed16f7b114a86ec68b8404b2443869e68ffda6",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "dependencies": {
    "fuse.js": "^7.1.0"
  }
}
