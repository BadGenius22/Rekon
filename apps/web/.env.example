# Rekon Web App - Environment Variables
# Copy this file to .env.local for local development
# For production, set these in Vercel Dashboard → Settings → Environment Variables

# ===========================
# REQUIRED - Application URLs
# ===========================

# API endpoint URL
NEXT_PUBLIC_API_URL=http://localhost:3001
# Production: NEXT_PUBLIC_API_URL=https://api.rekon.gg

# Current app URL
NEXT_PUBLIC_APP_URL=http://localhost:3000
# Production: NEXT_PUBLIC_APP_URL=https://app.rekon.gg

# Landing page URL
NEXT_PUBLIC_LANDING_URL=http://localhost:3003
# Production: NEXT_PUBLIC_LANDING_URL=https://rekon.gg

# Site URL (canonical)
NEXT_PUBLIC_SITE_URL=http://localhost:3000
# Production: NEXT_PUBLIC_SITE_URL=https://app.rekon.gg

# ===========================
# REQUIRED - Blockchain & RPC
# ===========================

# Polygon RPC URL (for wallet connections and chain interactions)
# Get from: https://www.alchemy.com or https://www.quicknode.com
NEXT_PUBLIC_POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# ===========================
# OPTIONAL - Demo Mode
# ===========================

# Enable demo mode by default (allows testing without real transactions)
NEXT_PUBLIC_DEMO_MODE=true
POLYMARKET_DEMO_MODE=true

# ===========================
# OPTIONAL - Polymarket Builder
# ===========================

# Polymarket Builder Credentials (for attribution and commission)
# Get from: https://polymarket.com/builder
# POLYMARKET_BUILDER_API_KEY=your-builder-api-key
# POLYMARKET_BUILDER_SECRET=your-builder-secret
# POLYMARKET_BUILDER_PASSPHRASE=your-builder-passphrase

# ===========================
# OPTIONAL - Redis (Caching)
# ===========================

# Upstash Redis REST API URL
# Get from: https://console.upstash.com/
# UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io

# Upstash Redis REST API Token
# UPSTASH_REDIS_REST_TOKEN=your-redis-token

# Enable/disable Redis (true|false)
# If false, falls back to in-memory LRU cache
# REDIS_ENABLED=true

# ===========================
# OPTIONAL - Wallet & Web3
# ===========================

# ThirdWeb Client ID (for wallet connection UI)
# Get from: https://thirdweb.com/dashboard
# NEXT_PUBLIC_THIRDWEB_CLIENT_ID=your-thirdweb-client-id
# THIRDWEB_SECRET_KEY=your-thirdweb-secret-key

# WalletConnect Project ID (alternative to ThirdWeb)
# Get from: https://cloud.walletconnect.com
# NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your-project-id

# ===========================
# OPTIONAL - Analytics
# ===========================

# Google Analytics Measurement ID
# Get from: https://analytics.google.com
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Vercel Analytics (automatically enabled on Vercel)
# No configuration needed

# Plausible Analytics Domain
# Get from: https://plausible.io
# NEXT_PUBLIC_PLAUSIBLE_DOMAIN=app.rekon.gg

# Mixpanel Project Token
# Get from: https://mixpanel.com
# NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token

# ===========================
# OPTIONAL - Error Tracking
# ===========================

# Sentry DSN (for error monitoring)
# Get from: https://sentry.io
# NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
# SENTRY_AUTH_TOKEN=your-sentry-auth-token
# SENTRY_ORG=your-org
# SENTRY_PROJECT=your-project

# ===========================
# OPTIONAL - Premium Features
# ===========================

# Enable premium features (signals, AI recommendations)
# NEXT_PUBLIC_ENABLE_PREMIUM=true

# Coinbase Developer Platform (for payment processing)
# Get from: https://portal.cdp.coinbase.com
# CDP_API_KEY=your-cdp-api-key
# CDP_API_SECRET=your-cdp-api-secret

# ===========================
# OPTIONAL - Esports Data
# ===========================

# Grid.gg API Key (for live esports data)
# Get from: https://portal.grid.gg
# GRID_API_KEY=your-grid-api-key

# ===========================
# OPTIONAL - Feature Flags
# ===========================

# Enable/disable specific features
# NEXT_PUBLIC_ENABLE_WALLET=true
# NEXT_PUBLIC_ENABLE_TRADING=true
# NEXT_PUBLIC_ENABLE_PORTFOLIO=true
# NEXT_PUBLIC_ENABLE_LEADERBOARD=true
# NEXT_PUBLIC_ENABLE_CHARTS=true
# NEXT_PUBLIC_ENABLE_SIGNALS=false
# NEXT_PUBLIC_ENABLE_AI=false

# ===========================
# DEVELOPMENT ONLY
# ===========================

# Next.js environment
NODE_ENV=development

# Enable Next.js debugging
# DEBUG=next:*

# Disable telemetry
# NEXT_TELEMETRY_DISABLED=1
